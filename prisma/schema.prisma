generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Seller {
  id              String    @id @default(dbgenerated("generate_custom_uuid()"))
  admin           Boolean   @default(false)
  firstname       String
  name            String
  email           String    @unique
  phone           String
  address         String
  password        String
  iban            String
  bic             String
  return_articles Boolean   @default(false)
  articles        Article[]
}

// 123 hash = $2a$08$YD44SouaLEXujaNSa1NfJeKy9FaR5Z3qTz57WyPdntvLZelHbcFwW

model Article {
  id        Int    @id @default(autoincrement())
  seller_id String
  brand     String
  name      String
  size      String
  price     Float
  state     Int
  seller    Seller @relation(fields: [seller_id], references: [id])
}

model Transaction {
  id               Int    @id @default(autoincrement())
  paiement_method  String
  paiement_date    DateTime @default(now())
  paiement_amount  Float
}
